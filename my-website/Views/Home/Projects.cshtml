@using my_website.Models.Entity
@model List<Tbl_Projects>

<section id="project">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-10 col-xl-8 mx-lg-auto text-center">
                <div class="section-title h2 mb-3">
                    <h2 class="mb-0">Projects</h2>
                    <span class="title-letter">P</span>
                </div>

                @Html.Action("ProjectCategories", "Home")

            </div>
        </div>
    </div>
    <div class="container">

        <div class="portfolio-container isotope-container row my-n2 mx-sm-n2">
            @foreach (var x in Model)
            {
                <div class="isotope-item col-sm-6 col-lg-4 py-2 px-sm-2 @x.Tbl_ProjectCategories.CATEGORY">
                    <div class="portfolio-item details-inside">

                        <a href="/Home/ProjectDetail/@x.ID">
                            <div class="item-media">
                                <img src="@x.IMAGE" alt="image">
                            </div>
                            <div class="item-overlay bg-dark"></div>
                            <div class="item-details">
                                <h4 class="h5">@x.HEADER</h4>
                                <p class="font-italic">@x.Tbl_ProjectCategories.NAME</p>
                            </div>
                        </a>

                    </div>
                </div>
            }
        </div>

    </div>
</section>
