@model my_website.Models.Entity.Tbl_Skills

@{
    ViewBag.Title = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="p-5">
        <div class="mb-3">
            <div class="row">
                <div class="form-group col-6">
                    <label class="form-label">Skill</label>
                    <input type="text" name="SKILL" class="form-control" placeholder="Exp: React, PHP..." />
                </div>
                <div class="form-group col-6">
                    <label class="form-label">Value(%)</label>
                    <input type="text" name="VALUE" class="form-control" placeholder="Add percent symbol after value (Exp: 60%, 80%)..." />
                </div>
            </div>
            <div>
                <button class="btn btn-primary btn-lg btn-block">Add</button>
            </div>
        </div>
    </div>
</form>
<div style="height: 170px;"></div>