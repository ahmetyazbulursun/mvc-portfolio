@model my_website.Models.Entity.Tbl_Experience

@{
    ViewBag.Title = "ExperienceUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("ExperienceUpdateAction", "Admin"))
{
    <div class="p-5">
        <div class="mb-3">
            <div class="row">
                <div class="form-group col-6">
                    @Html.HiddenFor(x => x.ID)
                    <label class="form-label">Header</label>
                    <input type="text" name="HEADER" class="form-control" value="@Html.DisplayTextFor(x=>x.HEADER)" placeholder="Exp: LinkedIn, GitHub..." />
                </div>
                <div class="form-group col-6">
                    <label class="form-label">Company Name</label>
                    <input type="text" name="COMPANYNAME" class="form-control" value="@Html.DisplayTextFor(x=>x.COMPANYNAME)" placeholder="Exp: LinkedIn, GitHub..." />
                </div>
                <div class="form-group col-6">
                    <label class="form-label">Start Date</label>
                    <input type="text" name="STARTDATE" class="form-control" value="@Html.DisplayTextFor(x=>x.STARTDATE)" placeholder="Exp: LinkedIn, GitHub..." />
                </div>
                <div class="form-group col-6">
                    <label class="form-label">End Date</label>
                    <input type="text" name="ENDDATE" class="form-control" value="@Html.DisplayTextFor(x=>x.ENDDATE)" placeholder="Exp: LinkedIn, GitHub..." />
                </div>
                <div class="form-group col-12">
                    <label class="form-label">Detail</label>
                    @Html.TextAreaFor(x => x.DETAIL, new { @class = "form-control" })
                </div>
            </div>
            <div>
                <button class="btn btn-primary btn-lg btn-block">Update</button>
            </div>
        </div>
    </div>
}
<div style="height: 170px;"></div>