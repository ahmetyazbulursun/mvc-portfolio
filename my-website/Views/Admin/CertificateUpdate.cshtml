@model my_website.Models.Entity.Tbl_Certificate

@{
    ViewBag.Title = "CertificateUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("CertificateUpdateAction", "Admin"))
{
    <div class="p-5">
        <div class="mb-3">
            <div class="row">
                <div class="form-group col-6">
                    @Html.HiddenFor(x => x.ID)
                    <label class="form-label">Name</label>
                    <input type="text" name="NAME" value="@Html.DisplayTextFor(x=>x.NAME)" class="form-control" />
                </div>
                <div class="form-group col-6">
                    <label class="form-label">Link</label>
                    <input type="text" name="LINK" value="@Html.DisplayTextFor(x=>x.LINK)" class="form-control" />
                </div>
            </div>
            <div>
                <button class="btn btn-primary btn-lg btn-block">Update</button>
            </div>
        </div>
    </div>
}