@model my_website.Models.Entity.Tbl_Interests

@{
    ViewBag.Title = "InterestUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("InterestUpdateAction", "Admin"))
{
    <div class="p-5">
        <div class="mb-3">
            <div class="row">
                <div class="form-group col-12">
                    @Html.HiddenFor(x=>x.ID)
                    <label class="form-label">Phone</label>
                    <input type="text" name="INTEREST" value="@Html.DisplayTextFor(x=>x.INTEREST)" class="form-control" />
                </div>
            </div>
            <div>
                <button class="btn btn-primary btn-lg btn-block">Update</button>
            </div>
        </div>
    </div>
}