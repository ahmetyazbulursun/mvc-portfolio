@model my_website.Models.Entity.Tbl_Skills
    
@{
    ViewBag.Title = "SkillUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("SkillUpdateAction", "Admin"))
{
    <div class="p-5">
        <div class="mb-3">
            <div class="row">
                <div class="form-group col-6">
                    @Html.HiddenFor(x => x.ID)
                    <label class="form-label">Skill</label>
                    <input type="text" name="SKILL" class="form-control" value="@Html.DisplayTextFor(x=>x.SKILL)" placeholder="Exp: LinkedIn, GitHub..." />
                </div>
                <div class="form-group col-6">
                    <label class="form-label">Value</label>
                    <input type="text" name="VALUE" class="form-control" value="@Html.DisplayTextFor(x=>x.VALUE)" placeholder="Exp: LinkedIn, GitHub..." />
                </div>
            </div>
            <div>
                <button class="btn btn-primary btn-lg btn-block">Update</button>
            </div>
        </div>
    </div>
}
<div style="height: 170px;"></div>