@using my_website.Models.Entity
@model List<Tbl_Skills>

@{
    ViewBag.Title = "Skills";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-5">
    <div class="float-start mb-3">
        <a href="/Admin/AddSkill" class="btn btn-info">Add Skill</a>
    </div>
    <table class="table table-borderless table-responsive-sm table-responsive-md bg-light">
        <thead align="center">
            <tr>
                <th>Skill</th>
                <th>Value</th>
                <th colspan="2">Operations</th>
            </tr>
        </thead>
        @foreach (var x in Model)
        {
            <tbody align="center">
                <tr>
                    <td>@x.SKILL</td>
                    <td>@x.VALUE</td>
                    <td><a href="/Admin/SkillUpdate/@x.ID" class="btn btn-outline-success">Update</a></td>
                    <td><a href="/Admin/SkillDelete/@x.ID" class="btn btn-outline-danger">Delete</a></td>
                </tr>
            </tbody>
        }
    </table>
</div>
<div style="height: 655px"></div>