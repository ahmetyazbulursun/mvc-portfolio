@using my_website.Models.Entity
@model List<Tbl_Certificate>

@{
    ViewBag.Title = "Certificates";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-5">
    <div class="float-left mb-3">
        <a href="/Admin/AddCertificate" class="btn btn-info">Add Certificate</a>
    </div>
    <table class="table table-borderless table-responsive-sm table-responsive-md bg-light">
        <thead align="center">
            <tr>
                <th>Name</th>
                <th>Link</th>
                <th colspan="2">Operations</th>
            </tr>
        </thead>
        @foreach (var x in Model)
        {
            <tbody align="center">
                <tr>
                    <td>@x.NAME</td>
                    <td>@x.LINK</td>
                    <td><a href="/Admin/CertificateUpdate/@x.ID" class="btn btn-outline-success">Update</a></td>
                    <td><a href="/Admin/CertificateDelete/@x.ID" class="btn btn-outline-danger">Delete</a></td>
                </tr>
            </tbody>
        }
    </table>
</div>
<div style="height: 650px"></div>