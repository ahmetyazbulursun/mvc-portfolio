@using my_website.Models.Entity
@model List<Tbl_Education>

@{
    ViewBag.Title = "Education";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-5">
    <div class="float-start mb-3">
        <a href="/Admin/AddEducation" class="btn btn-info">Add Education</a>
    </div>
    <table class="table table-borderless table-responsive-sm table-responsive-md bg-light">
        <thead align="center">
            <tr>
                <th>Department</th>
                <th>School</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th colspan="2">Operations</th>
            </tr>
        </thead>
        @foreach (var x in Model)
        {
            <tbody align="center">
                <tr>
                    <td>@x.DEPARTMENT</td>
                    <td>@x.SCHOOL</td>
                    <td>@x.STARTDATE</td>
                    <td>@x.ENDDATE</td>
                    <td><a href="/Admin/EducationUpdate/@x.ID" class="btn btn-outline-success">Update</a></td>
                    <td><a href="/Admin/EducationDelete/@x.ID" class="btn btn-outline-danger">Delete</a></td>
                </tr>
            </tbody>
        }
    </table>
</div>
<div style="height: 655px"></div>